<h4>Historique des réservations effectuées</h4>

@if (Model.BookingFiles.Count > 0)
{
    <table class="table table-bordered" width="100">
        <thead>
            <tr>
                <th>Destination</th>
                <th>Participants</th>
                <th>Assurances</th>
                <th>Etat de la commande</th>
                <th>Prix total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookingFile in Model.BookingFiles)
            {
                <tr>
                    <td>@bookingFile.Travel.Destination.Area</td>
                    <td>@bookingFile.Travellers.Count</td>
                    <td>@bookingFile.Insurances.Count</td>
                    <td>@bookingFile.BookingFileState</td>
                    <td>@bookingFile.TotalPrice €</td>
                    <td><a href="@Url.Action("Summary","Reservation", new { id = bookingFile.ID})" class="btn btn-primary btn-sm"><i class="fa fa-search"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucune réservation effectuée</p>
}
